@model UserRegisterVm
<section class="breadcrumb-section">
	<h2 class="sr-only">Site Breadcrumb</h2>
	<div class="container">
		<div class="breadcrumb-contents">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
					<li class="breadcrumb-item active">Register</li>
				</ol>
			</nav>
		</div>
	</div>
</section>
<!--=============================================
=            Login Register page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
				<!-- Login Form s-->
				<form  method="post">
					<div class="login-form">
						<h4 class="login-title">New User</h4>
						<p><span class="font-weight-bold">I am a new customer</span></p>
						<div class="row">
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="FullName"></label>
								<input class="mb-0 form-control" asp-for="FullName" placeholder="Full Name">
								<span class="text-danger" asp-validation-for="FullName"></span>
							</div>
							<div class="col-12 mb--20">
								<label asp-for="Username"></label>
								<input class="mb-0 form-control" asp-for="Username" placeholder="Full Name">
								<span class="text-danger" asp-validation-for="Username"></span>
							</div>
							<div class="col-12 mb--20">
								<label asp-for="Email"></label>
								<input class="mb-0 form-control" asp-for="Email" placeholder="Full Name">
								<span class="text-danger" asp-validation-for="Email"></span>
							</div>
							<div class="col-lg-6 mb--20">
								<label asp-for="Password"></label>
								<input class="mb-0 form-control" asp-for="Password" placeholder="Full Name">
								<span class="text-danger" asp-validation-for="Password"></span>
							</div>
							<div class="col-lg-6 mb--20">
								<label asp-for="ConfirmPassword"></label>
								<input class="mb-0 form-control" asp-for="ConfirmPassword" placeholder="Full Name">
								<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
							</div>
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<div class="col-md-12">
								<button type="submit" class="btn btn-outlined">Register</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</main>
@section Scripts
{
<partial name="_ValidationPartial"/>
}
